=simple_form_for(@job,html:{class: 'form_horizontal'})do |f|
  =f.collection_select :category_id, Category.all, :id, :name, {prompt:"Choose your Category"}
  =f.input :title, label: "Job Title"
  =f.input :description, label: "Job Description"
  =f.input :company, label: "Your Company"
  =f.input :url, label: "Link To"
  %br/
  =f.button :submit
  